{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "declaration": true,
    "rootDir": "src"
  },
  // "ts-node": {
  //   "experimentalSpecifierResolution": "node",
  //   "transpileOnly": true,
  //   "esm": true,
  //   "require": ["tsconfig-paths/register"]
  // },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist/**/*"]
}
